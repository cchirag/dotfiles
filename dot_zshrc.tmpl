# Zsh config

# Mise (version manager)
if command -v mise &> /dev/null; then
    eval "$(mise activate zsh)"
fi

# Aliases
alias v="nvim"
alias vim="nvim"
alias lg="lazygit"
alias zj="zellij"

# Editor
export EDITOR="nvim"
export VISUAL="nvim"

# Path
export PATH="$HOME/.local/bin:$PATH"

# FZF
if command -v fzf &> /dev/null; then
    source <(fzf --zsh) 2>/dev/null || true
fi
