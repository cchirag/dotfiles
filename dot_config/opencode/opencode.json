{
  "$schema": "https://opencode.ai/config.json",
  "model": "ollama/qwen3:0.6b",
  "instructions": ["~/.config/opencode/instructions.md"],
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://127.0.0.1:11434/v1"
      },
      "models": {
        "qwen3:0.6b": {
          "name": "Qwen3 0.6B (fast)",
          "limit": {
            "context": 32000,
            "output": 8000
          }
        },
        "qwen3:8b": {
          "name": "Qwen3 8B (reasoning)",
          "limit": {
            "context": 32000,
            "output": 8000
          }
        }
      }
    }
  },
  "mcp": {
    "websearch": {
      "type": "local",
      "command": ["python3", "-m", "duckduckgo_mcp", "serve"],
      "enabled": true
    }
  }
}
