// Dev layout: 4 tabs - Terminal | Editor | AI | Git
layout {
    // Tab 1: Split terminal (left/right)
    tab name="term" {
        pane split_direction="horizontal" {
            pane
            pane
        }
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    // Tab 2: Neovim (default focus)
    tab name="nvim" focus=true {
        pane command="nvim" {
            args "."
        }
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    // Tab 3: OpenCode
    tab name="ai" {
        pane command="opencode"
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }

    // Tab 4: Lazygit
    tab name="git" {
        pane command="lazygit"
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
}
